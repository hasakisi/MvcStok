@using MvcStok.Models.Entity
@model List<kategoriler>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Ad</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    <tbody>
        @foreach(var ktgr in Model)
            {
                <tr>
                    <th>@ktgr.KATEGORIID</th>
                    <td>@ktgr.KATEGORIAD</td>
                    <td><a href="/Kategoriler/Sil/@ktgr.KATEGORIID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Kategoriler/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">Güncelle</a></td>


                </tr>
            }
    </tbody>
</table>

<a href="/Kategoriler/YeniKategori" class="btn btn-primary">Yeni Kategori Ekle</a>